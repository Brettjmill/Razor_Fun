<!DOCTYPE html>
<html>
    <head>
        <meta charset='utf-8'>
        <title>Foods!</title>
    </head>
    <body>
        <h1>Here are some delicious foods!</h1>
        @{
            var StringList = new List<string>
            {
                "Apple Pie",
                "Burritos",
                "Clams Casino",
                "Donuts"
            };

            foreach(var word in StringList)
            {
                @if(word.StartsWith("C"))
                {
                    <p style = "color: red;">@word</p>
                }
                else{
                    <p>@word</p>
                }
            }
        }
    </body>
</html>

